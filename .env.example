# Environment Configuration
ENVIRONMENT=development

# API Gateway
API_GATEWAY_PORT=8000
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Product Service
PRODUCT_SERVICE_PORT=8001
PRODUCT_SERVICE_URL=http://product-service:8001
PRODUCT_DB_HOST=product-db
PRODUCT_DB_PORT=5432
PRODUCT_DB_NAME=product_db
PRODUCT_DB_USER=postgres
PRODUCT_DB_PASSWORD=postgres

# Order Service
ORDER_SERVICE_PORT=8002
ORDER_SERVICE_URL=http://order-service:8002
ORDER_DB_HOST=order-db
ORDER_DB_PORT=5432
ORDER_DB_NAME=order_db
ORDER_DB_USER=postgres
ORDER_DB_PASSWORD=postgres

# Inventory Service
INVENTORY_SERVICE_PORT=8003
INVENTORY_SERVICE_URL=http://inventory-service:8003
INVENTORY_DB_HOST=inventory-db
INVENTORY_DB_PORT=5432
INVENTORY_DB_NAME=inventory_db
INVENTORY_DB_USER=postgres
INVENTORY_DB_PASSWORD=postgres

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
PUBSUB_ORDER_TOPIC=order-events
PUBSUB_ORDER_SUBSCRIPTION=inventory-order-subscription
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json

# Redis (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
